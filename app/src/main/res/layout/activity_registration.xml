<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity"
        android:background="@drawable/android18"
        >



        <TextView
            android:id="@+id/register_page_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:text="Войти"
            android:textColor="#8492a6" />

        <TextView
            android:id="@+id/register_registraciya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout_name"
            android:layout_below="@+id/register_registraciya"
            android:gravity="center_horizontal"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/mainBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_ed_name"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="Имя"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:backgroundTint="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout_email"
            android:layout_below="@+id/register_layout_name"
            android:gravity="center_horizontal"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/mainBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_ed_email"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mail_outline_24px"
                android:hint="Имя"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:backgroundTint="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/register_layout_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_layout_email"
            android:gravity="center_horizontal"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_toggle_drawable"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/mainBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_ed_pass"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:hint="Придумайте пароль"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:backgroundTint="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/register_layout_pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_layout_pass"
            android:gravity="center_horizontal"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_toggle_drawable"
            app:hintEnabled="false"
            app:boxStrokeColor="@color/mainBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_ed_pass2"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:hint="Повторите пароль"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:backgroundTint="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/register_page_register_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/mainBlue"
            android:layout_below="@id/register_layout_pass2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:text="Готово"/>

    </RelativeLayout>
</ScrollView>